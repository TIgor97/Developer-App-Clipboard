{
  "manifest_version": 3,
  "name": "App Clipboard",
  "version": "0.1.0",
  "description": "Quick copy developer notes and snippets.",
  "action": {
    "default_title": "App Clipboard",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "permissions": [
    "storage",
    "clipboardWrite"
  ]
}